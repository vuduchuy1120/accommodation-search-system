@using ASSystem.Dtos
@model List<MotelwithImagesDto>
@{
    <style>
        .text-truncate1 {
            overflow: hidden;
            text-overflow: ellipsis;
        }

        span.name {
            font-weight: bold;
            font-size: 18px;
            color: #333;
        }

        span.date {
            font-size: 14px;
            color: #999;
        }

        button.contact-btn {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 8px 16px;
            border-radius: 5px;
            cursor: pointer;
        }

            button.contact-btn:hover {
                background-color: #0056b3;
            }

        .mt-2 {
            margin-top: 8px; /* adjust as needed */
        }

    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha384-ZyIfGNr5iZ1gSOnM6C0f+XWq7qRw/ehm6+r3zr6bocpdzqC7n13Mx1q6qFtRl9s7" crossorigin="anonymous">
    <section style="background-color: #eee;">
        <div class="container py-5">
            @foreach (var item in Model)
            {
                <div class="row justify-content-center mb-3">
                    <div class="col-md-12 col-xl-10">
                        <div class="card shadow-0 border rounded-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                                        <div class="bg-image hover-zoom ripple rounded ripple-surface">
                                            <img src="https://localhost:7280/api/Motel@(item.RoomImages[0].PathImageDetail)"
                                                 class="w-100" />
                                            <a href="/Motel/Details?id=@item.MotelId">
                                                <div class="hover-overlay">
                                                    <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);">CLick me</div>
                                                </div>
                                            </a>
                                            <a href="/Motel/Form?id=@item.MotelId">
                                                <div class="hover-overlay">
                                                    <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);">Update me</div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-lg-6 col-xl-6">
                                        <h5>@item.Tittle</h5>
                                        <div class="d-flex flex-row">
                                            <div class="text-danger mb-1 me-2">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                            <span style="color:red; font-weight:bold">@item.Price?.ToString("0.##") triệu/tháng • 25m²</span>
                                        </div>
                                        <div class="mt-1 mb-0 text-muted small">
                                            <img src="./location.png" style='height:24px; width:auto'></img>
                                            <span>  @item.Address,@item.Ward, @item.District, @item.Province</span>
                                        </div>
                                        <!--<div class="mb-2 text-muted small">
                                            <span>Unique design</span>
                                            <span class="text-primary"> • </span>
                                            <span>For men</span>
                                            <span class="text-primary"> • </span>
                                            <span>Casual<br /></span>
                                        </div>-->
                                        <p class="text-truncate1 mb-4 mb-md-0">
                                            @item.Description
                                        </p>
                                    </div>
                                    <!--  <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                                          <div class="d-flex flex-row align-items-center mb-1">
                                              <h4 class="mb-1 me-1">$13.99</h4>
                                              <span class="text-danger"><s>$20.99</s></span>
                                          </div>
                                          <h6 class="text-success">Free shipping</h6>
                                          <div class="d-flex flex-column mt-4">
                                              <button class="btn btn-primary btn-sm" type="button">Details</button>
                                              <button class="btn btn-outline-primary btn-sm mt-2" type="button">
                                                  Add to wishlist
                                              </button>
                                          </div>
                                      </div> -->
                                </div>
                                <hr />
                                <div class="row" style="margin:10px">
                                    <div class="col d-flex justify-content-between flex-column">
                                        <div class="row">
                                            <span class="name">Vu Duc Huy</span>
                                        </div>
                                        <div class="row mt-2">
                                            <span class="date">Ngày đăng bài</span>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <button class="contact-btn float-end">Liên hệ</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </section>

}
